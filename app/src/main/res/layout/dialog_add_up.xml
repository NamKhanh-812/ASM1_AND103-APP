<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/khung_edit"
    android:backgroundTint="#D0DFE1"
    android:orientation="vertical"
    android:padding="13dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nhập thông tin sinh viên"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edtMaSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:background="@drawable/khung_edit"
        android:hint="Mã SV"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtNameSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/khung_edit"
        android:hint="Tên SV"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtDiemTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/khung_edit"
        android:hint="Điểm trung bình"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/khung_edit"
        android:hint="Link ảnh"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgAvatarSV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/khung_edit"
        android:src="@drawable/common_full_open_on_phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/khung_edit"
            android:backgroundTint="#B39743"
            android:text="Chọn ảnh"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/khung_edit"
            android:backgroundTint="#2196F3"
            android:text="Save"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>